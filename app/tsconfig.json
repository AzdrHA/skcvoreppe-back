{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "paths": {
      "@Controller/*": ["src/Controller/*"],
      "@Module/*": ["src/Module/*"],
      "@Service/*": ["src/Service/*"],
      "@Spec/*": ["src/Spec/*"],
      "@Command/*": ["src/Command/*"],
      "@Config/*": ["src/Config/*"],
      "@Connector/*": ["src/Connector/*"],
      "@Entity/*": ["src/Entity/*"],
      "@Repository/*": ["src/Repository/*"],
      "@ServiceApi/*": ["src/ServiceApi/*"],
      "@ServiceCommand/*": ["src/ServiceCommand/*"],
      "@Middleware/*": ["src/Middleware/*"],
    }
  }
}
